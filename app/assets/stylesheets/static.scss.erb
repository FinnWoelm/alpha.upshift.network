$background_image: "<%= asset_path 'dawn.jpg' %>";

body.c-static.a-home {
  nav#main_navigation {
    background-color: rgba(255, 255, 255, 0.1);
  }
}

#static_home {

  // wrap everything for exact positioning
  position: absolute;
  top:0px;
  width:100%;
  z-index: -1;

  // the central call to action that is the first thing the user sees
  #call_to_action {
    background:
      url($background_image)
      center
      center
      no-repeat;
    background-size: cover;

    .valign {
      margin: auto;
      padding-top: 100px;
      padding-bottom: 150px;
      width:100%;
    }

    // style text with shadow to improve visibility
    h1, h2, h3, h4 {
      color: white;
      text-shadow:
        0px 0px 5px rgba(0,0,0,.5),
        0px 0px 10px rgba(0,0,0,.8),
        10px 10px 20px black;
    }
  }

}

body#layout_static_info_message {
  background:
    url($background_image)
    center
    center
    no-repeat
    fixed;
  background-size: cover;
}
