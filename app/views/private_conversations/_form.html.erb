<div class="row content no_margin">
  <%= form_for private_conversation, class: "col s12" do |f| %>

    <div class="row no_margin_bottom">
      <div class="input-field col s12">
        <%= f.text_field :recipient %>
        <%= f.label :recipient %>
      </div>
    </div>

    <div class="row no_margin_bottom">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          Create Conversation
          <i class="mdi mdi-send right"></i>
        </button>
      </div>
    </div>

  <% end %>
</div>
