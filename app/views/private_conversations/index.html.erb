<div class="page_heading z-depth-1">
  <h3>Conversations</h3>
</div>

<div class="section"></div>

<%= infinity_scroll_fallback @private_conversations %>

<ul class="conversation_preview_wrapper">
  <div class="new_conversation card-panel card-flat no_margin">
    <%= link_to new_private_conversation_path, class: 'open_conversation hoverable white black-text primary-color-on-hover primary-color-text-on-hover' do %>
      <div class="row no_margin_bottom">
        <div class="col s2 m2 l1 center-align">
          <%= image_tag "community/add.png", class: 'responsive-img z-depth-1 rounded' %>
        </div>
        <div class="col s10 m10 l11">

          <strong>
            New conversation...
          </strong>
          <br/>
          Start a conversation with a friend.

        </div>
      </div>
    <% end %>
  </div>
  <div class="private_conversation_previews" data-updated-at="<%= @private_conversations[0].try(:updated_at).try(:exact) || Time.zone.now.exact %>">
    <%= render(@private_conversations) %>
  </div>
</ul>

<%= infinity_scroll @private_conversations %>

<div class="section"></div>
