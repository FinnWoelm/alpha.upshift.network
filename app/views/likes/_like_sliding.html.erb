<%= form_tag(like_path(:likable_id => object.id, :likable_type => object.class.base_class.to_s), class: 'like_button sliding', method: "post") do %>
  <button class="btn-flat waves-effect waves-light" type="submit" name="action">
    <span>
      <i class="mdi mdi-thumb-up left"></i>
      <%= object.likes_count || 0 %>
    </span>
    <span>
      LIKE
    </span>
  </button>
<% end %>
