<%= render partial: "shared/page_heading", locals: { heading: "Login" } %>

<%
  input_class = "invalid" if @login_failed
%>

<div class="section"></div>

<%= form_tag '/login' do %>

<div class="row">
  <div class="row">
     <div class="input-field col s12">
       <%= text_field_tag :email, params[:email], class: input_class %>
       <%= label_tag :email %>
     </div>
   </div>

   <div class="row">
     <div class="input-field col s12">
       <%= password_field_tag :password, "", class: input_class %>
       <%= label_tag :password %>
     </div>
   </div>

   <div class="row">
     <div class="col s12">
       <button class="btn waves-effect waves-light primary_color" type="submit" name="action">
         <i class="mdi mdi-key left"></i>
         Login
       </button>
     </div>
   </div>

<% end %>
