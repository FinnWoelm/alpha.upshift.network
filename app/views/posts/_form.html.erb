<div class="row post-wrapper post_form">
  <div class="col s12">

    <div class="post z-depth-1">

      <div class="author_recipient_wrapper">
        <%# AUTHOR %>
        <div class="author_wrapper single_line">
          <%# AUTHOR PICTURE %>
          <div class="user_image z-depth-1 gray">
            <%= image_tag profile_picture(@current_user) %>
          </div>

          <%# AUTHOR NAME %>
          <div class="name_badge single_line prevent_overflow z-depth-1 <%= @current_user.color_scheme_with_font_color %>">
            <%= @current_user.name %>
          </div>
        </div><%

        if post.recipient and @current_user.id != post.recipient.id
          %><div class="recipient_wrapper single_line">

            <i class="mdi mdi-chevron-right mdi-24px gray-text"></i>

            <%# RECIPIENT PICTURE %>
            <div class="user_image z-depth-1 gray">
              <%= image_tag profile_picture(post.recipient) %>
            </div>

            <%# RECIPIENT NAME %>
            <div class="name_badge single_line prevent_overflow z-depth-1 <%= post.recipient.color_scheme_with_font_color %>">
                <%= post.recipient.name %>
            </div>
          </div>
        <% end %>
      </div>

      <%# CONTENT %>
      <div class="row content no_margin">
        <%= form_for post, class: "col s12"  do |f| %>

          <%= f.hidden_field :recipient_username %>

          <div class="row no_margin_bottom">
            <div class="input-field col s12">
              <%= f.text_area :content, class: "materialize-textarea" %>
              <%= f.label :content, "What's on your mind?" %>
            </div>
          </div>

          <div class="row no_margin_bottom">
            <div class="col s12">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                Post
                <i class="mdi mdi-send right"></i>
              </button>
            </div>
          </div>

        <% end %>
      </div>

      <div class="actions row no_margin">

        <%# TIMESTAMP %>
        <div class="col s12 m6 offset-m6 right-align no_padding">
          <div class="fake_button">now</div>
        </div>
      </div>
    </div>

  </div>
</div>
