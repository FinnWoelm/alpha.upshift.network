<div class="row content no_margin">
  <%= form_for [private_conversation, private_message], class: "col s12", remote: true do |f| %>

    <div class="row no_margin_bottom">
      <div class="input-field col s12">
        <%= f.text_area :content, class: "materialize-textarea" %>
        <%= f.label :content, "Message" %>
      </div>
    </div>

    <div class="row no_margin_bottom">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <%= material_icon.autorenew.css_class('spin left loading-indicator hide') %>
          Send Message <i class="material-icons right">send</i>
        </button>
        <div class="tip">
          (or press
          <code class="red white-text">ctrl</code>
          +
          <code class="red white-text">enter</code>)
        </div>
      </div>
    </div>

  <% end %>
</div>
