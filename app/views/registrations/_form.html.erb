<div class="row">
  <%= form_for registration, url: registration_path, class: 'col s12' do |f| %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name %>
        <%= f.label :name %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :username %>
        <%= f.label :username, "Username (a-z, A-Z, 0-9, _) (3-26 characters)" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, placeholder: "email@example.com" %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password %>
        <%= f.label :password, "Password (8-50 characters)" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password_confirmation %>
        <%= f.label :password_confirmation, "Confirm your password" %>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <i class="mdi mdi-send left"></i>
          Sign Up
        </button>
      </div>
    </div>

  <% end %>
</div>
