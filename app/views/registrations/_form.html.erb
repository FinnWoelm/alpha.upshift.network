<div class="row">
  <%= form_for registration, url: registration_path, class: 'col s12' do |f| %>


    <% if registration.errors.any? %>
      <div class="row no_margin_bottom">
        <div class="col s12">
          <div id="error_explanation">
            <h2><%= pluralize(registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

            <ul>
            <% registration.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>


    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name %>
        <%= f.label :name %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :username %>
        <%= f.label :username, "Username (a-z, A-Z, 0-9, _) (3-26 characters)" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, placeholder: "email@example.com" %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password %>
        <%= f.label :password, "Password (8-50 characters)" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password_confirmation %>
        <%= f.label :password_confirmation, "Confirm your password" %>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          <i class="material-icons left">send</i>
          Sign Up
        </button>
      </div>
    </div>

  <% end %>
</div>
