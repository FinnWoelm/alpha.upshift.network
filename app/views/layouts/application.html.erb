<!DOCTYPE html>
<html>
  <head>
    <title>UpshiftNetwork</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <% if @current_user %>
    <div id="header" style="width: 100%; background-color: salmon;">
      <p>
        <%= link_to private_conversations_home_path do %>
          Unread conversations: <%= @current_user.unread_private_conversations.size %>
        <% end %>
      </p>
    </div>
  <% end %>

  <%= yield %>

  </body>
</html>
