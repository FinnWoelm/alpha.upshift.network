<div style="width: 100%; background-color: lightgray;">

<p>
  <strong>
    <%= comment.author.name %>
    wrote on
    <%= render_timestamp(comment.created_at) %>
  </strong>
</p>

<p>
  <%= comment.content %>
</p>

<p>
  Likes: <%= comment.likes_count %>
</p>

<% if comment.can_be_liked_by?(@current_user) %>
  <%= like_action comment %>
<% elsif comment.can_be_unliked_by?(@current_user) %>
  <%= unlike_action comment %>
<% end %>


<% if comment.can_be_deleted_by?(@current_user) %>
  <%= link_to 'Delete Comment', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</div>
