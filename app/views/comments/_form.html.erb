<div class="comment">
  <div class="meta">
    <%# PROFILE PICTURE %>
    <div class="author_image z-depth-1">
      <%= image_tag @current_user.profile_picture.url %>
    </div>

  </div>

  <div class="content">

    <div class="with_padding">

      <div class="right">
        now
      </div>
      <span><strong>
        <%= @current_user.name %>
      </strong></span>

      <div class="row new_comment_form no_margin_bottom">
        <%= form_for comment,
          url: comment_path(
            :commentable_type => comment.commentable_type,
            :commentable_id => comment.commentable_id),
          as: :comment,
          class: "col s12" do |f| %>

          <div class="row no_margin_bottom">
            <div class="input-field col s12">
              <%= f.text_area :content, class: "materialize-textarea" %>
              <%= f.label :content, "What do you think?" %>
            </div>
          </div>


          <div class="row no_margin_bottom">
            <div class="col s12">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                Comment <i class="material-icons right">send</i>
              </button>
            </div>
          </div>

        <% end %>
      </div>

    </div>

  </div>

</div>
