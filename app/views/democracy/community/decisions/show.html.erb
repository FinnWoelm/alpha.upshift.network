<div class="row community_decision_wrapper">
  <div class="col s12">

    <div class="community_decision z-depth-2">

      <%# PROFILE PICTURE %>
      <%= link_to profile_path @decision.author do %>
        <div class="author_image z-depth-1 grey">
          <%= image_tag profile_picture @decision.author.username %>
        </div>
      <% end %>

      <%# AUTHOR NAME %>
      <%= link_to profile_path @decision.author do %>
        <div class="author_name z-depth-1 indigo white-text">
          <%= @decision.author.name %>
        </div>
      <% end %>

      <%# CONTENT %>
      <div class="content">

        <p class="time right grey-text no_margin_bottom">
          <i class="material-icons tiny">schedule</i>
          <%= time_ago_in_words(@decision.ends_at) %> left<br/>
        </p>

        <div class="clearfix"></div>

        <h3 class="no_margin_top"><%= @decision.title %></h3>
        <%= simple_format h(@decision.description) %>
      </div>

      <%# ACTIONS %>
      <div class="actions grey lighten-4">
        <div class="row">

          <div class="col s6 center-align">
            <p class="green-text">
              <button data-target="d<%= @decision.id %>_modal_upvote" class="waves-effect waves-light btn-floating btn-large
                green modal-trigger">
                <i class="material-icons">thumb_up</i>
              </button>
              <span class="votes">0<%#= @decision.upvotes %></span>
            </p>
          </div>
          <div class="col s6 center-align">
            <p class="red-text">
              <button data-target="d<%= @decision.id %>_modal_downvote" class="waves-effect waves-light btn-floating btn-large
                red modal-trigger">
                <i class="material-icons">thumb_down</i>
              </button>
              <span class="votes">0<%#= @decision.downvotes %></span>
            </p>
          </div>

        </div>
      </div>
    </div>

    <div class="section"></div>
    <div class="divider"></div>
    <h4>What matters to our community?</h4>

    <div class="section"></div>
    <div class="divider"></div>
    <h4>Alternative Ideas</h4>

    <div class="section"></div>
    <div class="divider"></div>
    <h4>Discussion</h4>
    <%= render partial: 'democracy/community/decision/comments/form',
      locals: {comment: @comment} %>

    <%= render partial: "democracy/community/decision/comments/comment",
      collection: @comments %>

  </div>
</div>
